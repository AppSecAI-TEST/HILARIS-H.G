<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="382dp">

        <Button
            android:id="@+id/button_warmup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="101dp"
            android:text="Warming Up"
            android:onClick="warmupClicked"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/button_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp"
            android:text="Exercise"
            android:onClick="exerciseClicked"
            android:layout_below="@+id/button_warmup"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button_cooldown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cool Down"
            android:onClick="cooldownClicked"
            android:layout_below="@+id/button_exercise"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>